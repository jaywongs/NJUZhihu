  content: "â€¢";
}

.cf-content {
  padding: 8px 5px;
  font-size: 24rpx;
  height: 80rpx;
  max-height: 80rpx;
  width: 35%;
  align-items: center;
}

.containerimage {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
}
